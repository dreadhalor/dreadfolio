{
  "name": "portfolio-backend",
  "version": "1.0.0",
  "description": "Express backend for Scott Hetrick's portfolio website",
  "author": "Scott Hetrick",
  "license": "MIT",
  "main": "src/server.ts",
  "scripts": {
    "start": "dotenvx run --env-file=../../../.env -- ts-node --transpile-only ./src/server.ts",
    "start:http": "USE_HTTPS=false dotenvx run --env-file=../../../.env -- ts-node --transpile-only ./src/server.ts",
    "dev": "dotenvx run --env-file=../../../.env -- nodemon --exec ts-node ./src/server.ts",
    "dev:http": "USE_HTTPS=false dotenvx run --env-file=../../../.env -- nodemon --exec ts-node ./src/server.ts"
  },
  "dependencies": {
    "@repo/su-done-ku-backend": "workspace:*",
    "cors": "^2.8.5",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.9.3",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
