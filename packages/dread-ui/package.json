{
  "name": "dread-ui",
  "description": "Shared UI component library with Radix UI, Tailwind CSS, and authentication",
  "version": "1.0.0",
  "author": "Scott Hetrick",
  "license": "MIT",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.tsx",
      "require": "./src/index.tsx"
    },
    "./style.css": {
      "require": "./src/index.css",
      "default": "./src/index.css"
    },
    "./built-style.css": {
      "require": "./output.css",
      "default": "./output.css"
    }
  },
  "scripts": {
    "dev": "dotenv -e ../../.env pnpm run storybook",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build": "dotenv -e ../../.env pnpm run build-storybook",
    "build-storybook": "storybook build -o ./dist/",
    "build:css": "tailwindcss -i ./src/index.css -o ./output.css"
  },
  "dependencies": {
    "@dicebear/collection": "^9.3.1",
    "@dicebear/core": "^9.3.1",
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-accordion": "^1.2.2",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-popover": "^1.1.4",
    "@radix-ui/react-radio-group": "^1.2.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-separator": "^1.1.1",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-switch": "^1.1.2",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@repo/utils": "workspace:*",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "firebase": "^11.1.0",
    "next-themes": "^0.4.4",
    "react": "^18.3.1",
    "react-day-picker": "^9.4.4",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "react-icons": "^5.4.0",
    "react-resizable-panels": "^2.1.7",
    "react-resize-detector": "^12.0.1",
    "sonner": "^1.7.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@repo/config": "workspace:*",
    "@storybook/addon-controls": "^8.5.0",
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@types/node": "^22.9.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.1",
    "eslint": "^8.57.1",
    "storybook": "^8.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.6.3",
    "vite": "^7.3.1"
  }
}
